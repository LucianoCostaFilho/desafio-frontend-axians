@if (Mostrar)
{
    <div class="fixed-bottom bg-dark text-white py-3 px-4 shadow d-flex justify-content-between align-items-center">
        <div>
            <strong>@Selecionadas</strong> taxa(s) selecionadas
        </div>
        <div>
            <button class="btn btn-outline-light btn-sm me-2" @onclick="Cancelar">CANCELAR</button>
            <button class="btn btn-danger btn-sm" @onclick="Eliminar">ELIMINAR</button>
        </div>
    </div>
}

@code {
    [Parameter] public int Selecionadas { get; set; }
    [Parameter] public EventCallback OnCancelar { get; set; }
    [Parameter] public EventCallback OnEliminar { get; set; }

    private bool Mostrar => Selecionadas > 0;

    private Task Cancelar() => OnCancelar.InvokeAsync();
    private Task Eliminar() => OnEliminar.InvokeAsync();
}
