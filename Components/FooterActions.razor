@if (Mostrar)
{
    <div class="footer-actions-bar d-flex justify-content-between align-items-center px-4 py-3">
        <div class="footer-actions-text">
            <strong>@Selecionadas</strong> taxas selecionadas
        </div>
        <div class="footer-actions-buttons d-flex gap-2">
            <button class="btn btn-sm btn-cancelar" @onclick="Cancelar">CANCELAR</button>
            <button class="btn btn-sm btn-eliminar" @onclick="Eliminar">ELIMINAR</button>
        </div>
    </div>
}


@code {
    [Parameter] public int Selecionadas { get; set; }
    [Parameter] public EventCallback OnCancelar { get; set; }
    [Parameter] public EventCallback OnEliminar { get; set; }

    private bool Mostrar => Selecionadas > 0;

    private Task Cancelar() => OnCancelar.InvokeAsync();
    private Task Eliminar() => OnEliminar.InvokeAsync();
}
