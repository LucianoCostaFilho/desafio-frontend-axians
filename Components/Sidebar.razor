<div class="sidebar-wrapper">
    @for (int i = 1; i <= 12; i++)
    {
        var isActive = CurrentStep == i;
        var isCompleted = i < CurrentStep;

        <div class="sidebar-option @(isActive ? "active" : "")"
             @onclick="() => OnStepChange.InvokeAsync(i)">
            <span class="option-text">Opção @i</span>

            @if (isActive)
            {
                <img src="Icons/arrow-left.png" width="24" />
                <i class="bi bi-arrow-repeat text-purple"></i>
            }
            else if (isCompleted)
            {
                <img src="Icons/arrow-left.png" width="24" />
                <i class="bi bi-check-circle-fill text-success"></i>
            }
            else
            {
                <img src="Icons/arrow-left.png" width="24" />
                <i class="bi bi-circle text-muted-gray"></i>
            }
        </div>
    }
</div>

@code {
    [Parameter] public int CurrentStep { get; set; }
    [Parameter] public EventCallback<int> OnStepChange { get; set; }
}
